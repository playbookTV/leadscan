{
  "name": "leadscout-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --recursive run dev",
    "dev:api": "pnpm --filter @leadscout/api run dev",
    "dev:web": "pnpm --filter @leadscout/web run dev",
    "start:api": "pnpm --filter @leadscout/api run start",
    "build:web": "pnpm --filter @leadscout/web run build",
    "build": "pnpm --recursive run build",
    "install:all": "pnpm install",
    "clean": "pnpm --recursive exec rm -rf node_modules dist"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}