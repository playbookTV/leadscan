# Node Environment
NODE_ENV=development

# Supabase (Required)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGc...

# Twitter OAuth (Required for Twitter polling)
TWITTER_API_KEY=xxx
TWITTER_API_SECRET=xxx
TWITTER_BEARER_TOKEN=xxx
TWITTER_ACCESS_TOKEN=xxx-xxx
TWITTER_ACCESS_SECRET=xxx

# Reddit OAuth (Required for Reddit polling)
REDDIT_CLIENT_ID=xxx
REDDIT_CLIENT_SECRET=xxx
REDDIT_REFRESH_TOKEN=xxx
REDDIT_USER_AGENT=Leadscout/1.0

# OpenAI (Required)
OPENAI_API_KEY=sk-proj-xxx
OPENAI_MAX_DAILY_COST=2.00

# Telegram (Required)
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
TELEGRAM_CHAT_ID=123456789

# HeySol MCP Server (Optional - for Claude Code sessions)
HEYSOL_API_KEY=rc_pat_xxxxx

# App Configuration
NODE_ENV=development
POLLING_INTERVAL_MINUTES=30
MIN_NOTIFICATION_SCORE=8
ENABLE_AI_ANALYSIS=true
AI_MIN_SCORE_THRESHOLD=5

# Polling Configuration
POLLING_CRON_SCHEDULE=*/30 * * * *
POLLING_PLATFORMS=twitter,reddit

# Twitter Optimization (reduces API usage)
TWITTER_MAX_KEYWORDS_PER_CYCLE=20
TWITTER_ENABLE_KEYWORD_ROTATION=true
TWITTER_ENABLE_KEYWORD_PRIORITIZATION=true
TWITTER_ENABLE_BATCHING=false
TWITTER_RATE_LIMIT_THRESHOLD=50

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# OpenAI Configuration
OPENAI_MODEL=gpt-4o-mini

# Application Port (Optional)
PORT=3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email Configuration
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="Ovalay Studios <hello@ovalay.com>"

# Alternative Email Providers (optional)
# SENDGRID_API_KEY=SG.xxx
# RESEND_API_KEY=re_xxx

# Railway-specific (Production)
# NODE_ENV=production
# PORT=3000
# FRONTEND_URL=${FRONTEND_URL}
